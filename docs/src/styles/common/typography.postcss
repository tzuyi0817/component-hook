@layer components {
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  strong,
  b {
    @apply font-bold;
  }

  h1 {
    @apply text-4xl lg:text-5xl mb-2;
  }

  h2 {
    @apply text-3xl lg:text-4xl mb-8;
  }

  h3 {
    @apply text-2xl lg:text-3xl mb-6 mt-9;
  }

  h4 {
    @apply text-xl lg:text-2xl mb-4 mt-2;
  }
}
