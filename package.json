{
  "license": "MIT",
  "packageManager": "pnpm@9.3.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -C playground dev",
    "build": "pnpm -C playground build",
    "build:vue3-picker": "pnpm -C packages/vue3-picker build",
    "preview": "pnpm -C playground preview",
    "test:vue3-picker": "pnpm -C vue3-picker test",
    "lint": "eslint --fix .",
    "typecheck": "pnpm typecheck:playground && pnpm typecheck:vue3-picker",
    "typecheck:playground": "pnpm -C playground typecheck",
    "typecheck:vue3-picker": "pnpm -C packages/vue3-picker typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.3",
    "eslint-plugin-vue": "^9.26.0",
    "globals": "^15.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.2",
    "sass": "^1.77.5",
    "sass-loader": "^14.2.1",
    "ts-jest": "^29.1.5",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vue-tsc": "^2.0.21"
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "pnpm lint",
      "pnpm typecheck"
    ]
  },
  "optionalDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  }
}
