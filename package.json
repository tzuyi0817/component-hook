{
  "license": "MIT",
  "packageManager": "pnpm@9.4.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "dev": "pnpm -C playground dev",
    "build": "pnpm -C playground build",
    "build:picker": "pnpm -C packages/picker build",
    "release:picker": "pnpm -C packages/picker release",
    "preview": "pnpm -C playground preview",
    "test:unit": "vitest --coverage",
    "lint": "eslint --fix .",
    "typecheck": "pnpm typecheck:playground && pnpm typecheck:picker",
    "typecheck:playground": "pnpm -C playground typecheck",
    "typecheck:picker": "pnpm -C packages/picker typecheck",
    "prepare": "husky"
  },
  "peerDependencies": {
    "vue": "^3.4.29"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.8",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/vue3-jest": "^29.2.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.3",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-vue": "^9.26.0",
    "globals": "^15.6.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.2",
    "sass": "^1.77.6",
    "sass-loader": "^14.2.1",
    "ts-jest": "^29.1.5",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.0.22"
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "pnpm lint",
      "pnpm typecheck"
    ]
  },
  "optionalDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  }
}
